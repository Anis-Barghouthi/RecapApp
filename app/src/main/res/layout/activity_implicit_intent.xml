<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="10"
    android:orientation="vertical"
    tools:context=".activities.ImplicitIntentActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="5"
        android:background="@color/yellow"
        android:gravity="center"
        android:text="IMPLICIT INTENT"
        android:textColor="@color/colorPrimary"
        android:textSize="40sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_button1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:onClick="callIntent"
        android:text="Launch Browser"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_button2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:onClick="callIntent"
        android:text="DIAL NUMBER"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_button3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:onClick="callIntent"
        android:text="Show Map"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_button4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:onClick="callIntent"
        android:text="Launch Camera"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_button5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:onClick="callIntent"
        android:text="OPEN Contact"
        android:textColor="@android:color/white" />

</LinearLayout>